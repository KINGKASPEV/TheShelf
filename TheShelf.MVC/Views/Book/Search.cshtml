@model List<TheShelf.Model.Dtos.BookDto>

@{
    ViewData["Title"] = "Search Results";
}

<h2>Search Results</h2>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Year Published</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.YearPublished</td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No results found for your search criteria.</p>
}

<a asp-action="BookList" asp-controller="Book">Back to Book List</a>
