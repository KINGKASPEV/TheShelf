@model TheShelf.MVC.Models.LoginViewModel

<div class="container mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
            <h1 class="mt-3 mb-3 h3">Login</h1>
            @if (TempData["RegistrationSuccess"] != null)
            {
                <div id="registrationSuccessMessage" class="alert alert-success">
                    @TempData["RegistrationSuccess"]
                </div>
            }

            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger">
                    @ViewBag.ErrorMessage
                </div>
            }
            <form method="post">
                <div class="mb-3">
                    <label class="form-label" for="username">Username</label>
                    <input type="text" id="username" class="form-control" asp-for="Username" required placeholder="Input your username" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="password">Password</label>
                    <input type="password" id="password" class="form-control" asp-for="Password" required minlength="6" placeholder="Input your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <small class="form-text text-muted">
                        Your password should be at least 6 characters long.
                    </small>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-outline-dark me-3">Login</button>
                </div>

                <input type="hidden" asp-for="ReturnUrl" />
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Function to hide the registration success message after a specified time (5 seconds)
        setTimeout(function () {
            var registrationSuccessMessage = document.getElementById("registrationSuccessMessage");
            if (registrationSuccessMessage) {
                registrationSuccessMessage.style.display = "none";
            }
        }, 5000); // 5000 milliseconds = 5 seconds
    </script>
}
